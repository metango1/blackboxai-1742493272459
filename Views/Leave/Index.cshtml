@{
    ViewData["Title"] = "Leave Requests";
}

<h1>Leave Requests</h1>

<table class="table">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Branch</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var leaveRequest in Model)
        {
            <tr>
                <td>@leaveRequest.Employee.FullName</td>
                <td>@leaveRequest.Branch.Name</td>
                <td>@leaveRequest.StartDate.ToShortDateString()</td>
                <td>@leaveRequest.EndDate.ToShortDateString()</td>
                <td>@leaveRequest.Status.ToString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@leaveRequest.Id" class="btn btn-info">Details</a>
                    @if (leaveRequest.Status == LeaveStatus.Pending)
                    {
                        <a asp-action="Approve" asp-route-id="@leaveRequest.Id" class="btn btn-success">Approve</a>
                        <a asp-action="Reject" asp-route-id="@leaveRequest.Id" class="btn btn-danger">Reject</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>